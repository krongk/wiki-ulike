<main class="grow">
  {%# ÂàÜÁ±ª %}
  <section class="flex-grow mx-auto mt-5 sm:px-0">
    <div class="h-full max-w-5xl py-8 mx-auto">
      <div class="px-16 py-8 bg-white border rounded border-slate-200 dark:bg-slate-600 text-slate-600 dark:text-slate-50">
        <div class="max-w-3xl mx-auto min-w-64">
          <h1 class="text-2xl text-center">{{ site.name }}</h1>
          <p class="mt-3 leading-6 text-center truncate">{{ site.settings.description }}</p>

          {%# ÂÜÖÂÆπ %}
          <div class="w-full px-4 sm:px-6 no-scrollbar">
            <div class="">

              <!-- Docs nav -->
              <nav class="md:block">
                <ul class="text-sm">
                  {%# È¶ñÈ°µÂçïÁã¨Â±ïÁ§∫ %}
                  <li class="mb-1">
                    <a href="/" class="relative flex items-center justify-between font-[650] text-slate-600 p-1 before:absolute before:inset-0 before:rounded before:bg-gradient-to-tr before:from-blue-400 before:to-purple-500 before:opacity-20 before:-z-10 before:pointer-events-none before:hidden dark:text-slate-200">
                      <div class="flex items-center space-x-3">
                        <svg
                          class="shrink-0"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          xmlns="http://www.w3.org/2000/svg">
                          <path class="fill-sky-400" d="M19.888 7.804a.88.88 0 0 0-.314-.328l-7.11-4.346a.889.889 0 0 0-.927 0L4.426 7.476a.88.88 0 0 0-.314.328L12 12.624l7.888-4.82Z" />
                          <path class="fill-white dark:fill-slate-800" d="M4.112 7.804a.889.889 0 0 0-.112.43v7.892c0 .31.161.597.426.758l7.11 4.346c.14.085.3.13.464.13v-8.736l-7.888-4.82Z" />
                          <path class="fill-sky-600" d="M19.888 7.804c.073.132.112.28.112.43v7.892c0 .31-.161.597-.426.758l-7.11 4.346c-.14.085-.3.13-.464.13v-8.736l7.888-4.82Z" />
                        </svg>
                        <span>‰∏ªÈ°µ</span>
                      </div>
                      <div class="px-3 grow">
                        <span class="block border-t border-slate-300"></span>
                      </div>
                      <div>

                      </div>
                    </a>
                  </li>
                  {% assign pages = site.pages['/'].children_in_list %}
                  {% for page in pages %}
                    {% assign sub_page_count = page.children_in_list | size %}

                      {% if sub_page_count > 0 %}
                      <!-- 1st level -->
                      <li class="mb-1" x-data="{ open: true }">
                        <div class="relative flex items-center justify-between p-1 text-slate-800 before:absolute before:inset-0 before:rounded before:bg-gradient-to-tr before:from-blue-400 before:to-purple-500 before:opacity-20 before:-z-10 before:pointer-events-none dark:text-slate-200">
                          <div class="flex items-center space-x-3">
                            <span
                              class=""
                              @click.prevent="open = !open"
                              aria-haspopup="true"
                              :aria-expanded="open">
                              <svg
                                class="shrink-0"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path class="fill-purple-400" d="M19.888 7.804a.88.88 0 0 0-.314-.328l-7.11-4.346a.889.889 0 0 0-.927 0L4.426 7.476a.88.88 0 0 0-.314.328L12 12.624l7.888-4.82Z" />
                                <path class="fill-white dark:fill-slate-800" d="M4.112 7.804a.889.889 0 0 0-.112.43v7.892c0 .31.161.597.426.758l7.11 4.346c.14.085.3.13.464.13v-8.736l-7.888-4.82Z" />
                                <path class="fill-purple-600" d="M19.888 7.804c.073.132.112.28.112.43v7.892c0 .31-.161.597-.426.758l-7.11 4.346c-.14.085-.3.13-.464.13v-8.736l7.888-4.82Z" />
                              </svg>
                            </span>
                            <a href="{{ page.path  }}">
                              <span>{{ page.link_text }}</span>
                            </a>
                          </div>
                          <div class="px-3 grow">
                            <span class="block border-t border-slate-300"></span>
                          </div>
                          <div>

                          </div>
                        </div>
                        <!-- 2nd level -->
                        <ul
                          class="pl-6 mb-3 ml-4 border-l border-slate-200 dark:border-slate-800"
                          :class="{ 'hidden': !open }"
                          x-cloak>
                          {% for sub_page in page.children_in_list %}
                            {% render "index_tree", page: sub_page %}
                          {% endfor %}
                        </ul>
                      </li>
                    {% else %}
                      <!-- 1st level -->
                      <li class="mb-1">
                        <a href="{{page.path}}" class="relative flex items-center justify-between p-1 text-slate-800 before:absolute before:inset-0 before:rounded before:bg-gradient-to-tr before:from-blue-400 before:to-purple-500 before:opacity-20 before:-z-10 before:pointer-events-none before:hidden dark:text-slate-200">
                          <div class="flex items-center space-x-3">
                            <svg
                              class="mr-3 shrink-0"
                              width="24"
                              height="24"
                              viewBox="0 0 24 24"
                              xmlns="http://www.w3.org/2000/svg">
                              <path class="fill-sky-400" d="M19.888 7.804a.88.88 0 0 0-.314-.328l-7.11-4.346a.889.889 0 0 0-.927 0L4.426 7.476a.88.88 0 0 0-.314.328L12 12.624l7.888-4.82Z" />
                              <path class="fill-white dark:fill-slate-800" d="M4.112 7.804a.889.889 0 0 0-.112.43v7.892c0 .31.161.597.426.758l7.11 4.346c.14.085.3.13.464.13v-8.736l-7.888-4.82Z" />
                              <path class="fill-sky-600" d="M19.888 7.804c.073.132.112.28.112.43v7.892c0 .31-.161.597-.426.758l-7.11 4.346c-.14.085-.3.13-.464.13v-8.736l7.888-4.82Z" />
                            </svg>
                            <span>{{ page.link_text }}</span>
                          </div>
                          <div class="px-3 grow">
                            <span class="block border-t border-slate-300"></span>
                          </div>
                          <div>

                          </div>
                        </a>
                      </li>
                    {% endif %}
                  {% endfor %}
                  <!-- 1st level -->

                </ul>
              </nav>

            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
  {% render 'footer', settings: site.settings %}
</main>
{% schema %}
  {
    "name": "Product manual",
    "description": "home like list dictionary style",
    "thumb_url": "images/theme/index-list.png",
    "preview_image_urls": [
      "images/theme/index-list.png"
    ],
    "sub_page_templates": ["page"],
    "settings": [
        {
          "id": "description",
          "type": "text",
          "label": "t:settings_schema.generic.settings.description.label",
          "default": "üëã What Can We Help?"
        },
        {
          "id": "copyright_info",
          "type": "text",
          "label": "t:settings_schema.generic.settings.copyright_info.label",
          "default": "t:settings_schema.generic.settings.copyright_info.default"
        }
      ]
  }
{% endschema %}
